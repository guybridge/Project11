<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="12dp">

<RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/asset7"
        android:id="@+id/pinImage"
        android:layout_width="170dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="3dp"
        android:text="The Earth"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/pinTitle"
        android:layout_below="@id/pinImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:text="Pretty picture of earth"
        android:layout_below="@+id/pinTitle"
        android:id="@+id/pinComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingBottom="4dp"
        android:text="#Space #Earth"
        android:id="@+id/pinTags"
        android:layout_below="@id/pinComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>

</android.support.v7.widget.CardView>